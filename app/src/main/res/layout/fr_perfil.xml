<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="none"
    android:scrollIndicators="none">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <ImageView
        android:layout_width="385dp"
        android:layout_height="214dp"
        android:id="@+id/imageView19"
        android:background="@drawable/r2p2" />
    <!-- Primera Imagen-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mis Favoritos"
        android:id="@+id/textView4" />

    <LinearLayout android:layout_width="317dp"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:id="@+id/ly7"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/favoritos_profile_image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/construcciones"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="sincronizado"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp" />

        <TextView
            android:id="@+id/favoritos_texto_principal"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="50dp"
            android:padding="2dp"
            android:textColor="#489e37"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp" />


    </LinearLayout>
    <!-- Segunda imagen -->
    <LinearLayout android:layout_width="317dp"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:id="@+id/ly8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/favoritos_profile_image3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/construcciones"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="sincronizado"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp" />

        <TextView
            android:id="@+id/favoritos_texto_principal2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="50dp"
            android:padding="2dp"
            android:textColor="#489e37"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp"
          />


    </LinearLayout>
    <!-- Tercera imagen -->


    <ImageButton
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_gravity="right"
        android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"
        android:background="#00000000"
        android:layout_marginTop="-50dp"
        android:layout_weight="0.07" />

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_gravity="right"
        android:layout_weight="0.07"
        android:layout_marginTop="-140dp"
        android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"
        android:background="#00000000"/>
    <!-- -->
</LinearLayout>


</ScrollView>