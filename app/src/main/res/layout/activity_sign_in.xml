<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="none"
    android:scrollIndicators="none">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="klaser.com.guatuneed.login.SignIn"
    android:weightSum="1"
    android:background="#ffffff">

    <ImageView
        android:layout_width="384dp"
        android:layout_height="180dp"
        android:id="@+id/imageView21"
        android:background="@color/Guatuneed"
        android:layout_weight="0.04" />

    <ImageView
        android:layout_width="83dp"
        android:layout_height="72dp"
        android:id="@+id/imageView20"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo__small"
        android:layout_marginTop="-120dp" />

    <ImageView
        android:layout_width="384dp"
        android:layout_height="10dp"
        android:id="@+id/imageView22"
        android:layout_weight="0.04"
        android:background="@color/Star"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenido, Iniciar Sesion"
        android:id="@+id/textView25"
        android:layout_weight="0.04"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"
        android:textColor="#040404" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <EditText
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:textColorHint="@android:color/black"
        android:textColor="#020101"
        android:layout_marginTop="20dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <EditText
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal"
        android:hint="Contraseña"
        android:textColorHint="@android:color/black"
        android:textColor="#050505"
        android:layout_marginTop="40dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:layout_marginTop="60dp"
        android:background="@color/Star"
        android:textColor="#000000" />

    <Button
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:id="@+id/button8"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_redondo"
        android:textColor="#888686"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:text="Crear una cuenta"
        android:id="@+id/button9"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_redondo"
        android:textColor="#FF888686"
        android:layout_marginTop="10dp" />
</LinearLayout>
    </ScrollView>
