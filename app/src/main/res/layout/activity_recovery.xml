<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="none"
    android:scrollIndicators="none"
    android:background="#ffffff">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="klaser.com.guatuneed.login.SignIn"
    android:weightSum="1">

    <ImageView
        android:layout_width="384dp"
        android:layout_height="180dp"
        android:id="@+id/imageView26"
        android:background="@color/Guatuneed"
        android:layout_weight="0.04" />

    <ImageView
        android:layout_width="83dp"
        android:layout_height="72dp"
        android:id="@+id/imageView27"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo__small"
        android:layout_marginTop="-120dp" />

    <ImageView
        android:layout_width="384dp"
        android:layout_height="10dp"
        android:id="@+id/imageView28"
        android:layout_weight="0.04"
        android:background="@color/Star"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recupera tu ContraseÃ±a"
        android:id="@+id/textView26"
        android:layout_weight="0.04"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"
        android:textColor="#040404" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_gravity="center_horizontal"
            android:hint="Email"
            android:layout_marginTop="20dp"
            android:editable="false"
            android:textIsSelectable="false"
            android:textStyle="bold" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:text="Recuperar"
        android:id="@+id/button12"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:layout_marginTop="60dp"
        android:background="@color/Star"
        android:textColor="#000000" />

    <Button
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:id="@+id/button13"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_redondo"
        android:textColor="#888686"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:text="Crear una cuenta"
        android:id="@+id/button14"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_redondo"
        android:textColor="#FF888686"
        android:layout_marginTop="10dp" />
</LinearLayout>
    </ScrollView>